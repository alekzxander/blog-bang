<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Blog Bang - Me Mofifier</title>
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->

    <link rel="stylesheet" type="text/css" href="/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/izitoast/dist/css/iziToast.min.css">
    <link rel="stylesheet" type="text/css" href="/css/admin.css" />

    <!--     Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    

</head>

<body>
    <div class="wrapper">


        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <a class="navbar-brand" href="#">Modifier mon profil Administrateur</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/logout">
                                    <p>Déconnexion</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
          
                <div class="container-fluid">
                    <% for (let i =0; i< adm.length;i++) { %> 
                    <% console.log('viewx'+adm[i].name) %> 

                   

                    <form method="post"  role="form" id="form" action ="/updateProfile">

                       

                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">

                                    <label>Nom </label>
                                    <input type="text" id= "name" value="<%= adm[i].name %>" name="name" class="form-control" placeholder="<%= adm[i].name  %>">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email </label>
                                    <input type="email" id="email" value="<%= adm[i].email %>"  name="email" class="form-control" placeholder="<%= adm[i].email %>"/>

                                </div>
                            </div>
                        </div>
                        
                        <!-- <button class="btn btn-info btn-fill" formaction="/post-article" type="submit">Publier</button>  -->
                        <button class="btn btn-primary btn-fill pull-left"  type="submit"> Mettre à jour  </button> 




                    </form>
                </div>
                <div class="container-fluid">
                <form method="post"  role="form"  action= "/changepass"  id="lateform" >
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" name="password" id="pass" value="" class="form-control" placeholder="nouveau mot de passe"/>


                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-fill pull-left"  type="submit"> Modifier password  </button>

                  
                
  <% } %> 
                </form>



            </div>
            </div>
        </form>


    </div>
</div>
</div>
</div>
<script src="/js/jquery.3.2.1.min.js"></script>
<script src="/dist/js/bootstrap.min.js"></script>
