<body>
    <div class="wrapper">
        <div class="sidebar" data-color="black" data-image="assets/img/sidebar-5.jpg">
        	<div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        <span style="font-weight: bold">Blog</span>Bang
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/admin/dashboard">
                             <i class="fa fa-tachometer" aria-hidden="true"></i>
                            <p>Tableau de bord</p>
                        </a>
                    </li>

                    <li class="active">
                            <a href="/admin/creer-article">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i>
                            <p>Crée un article </p>
                        </a>
                    </li>

                    <li>
                            <a href="/admin/liste-articles">
                            <i class="fa fa-users" aria-hidden="true"></i>
                            <p>Liste des articles</p>
                        </a>
                    </li>

                    <li >
                        <a href="#">
                              <i class="fa fa-plus-circle" aria-hidden="true"></i>
                            <p>azerty</p>
                        </a>
                    </li>

                    <li>
                         <a href="/liste-votes">
                             <i class="fa fa-list" aria-hidden="true"></i>
                            <p>Liste des votes</p>
                        </a>
                    </li>      
                </ul>
        	</div>
        </div>

        <div class="main-panel">
    		<nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Crée un article</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                               <a href="/logout">
                                    <p>Déconnexion</p>
                                </a>
                            </li>
    						<li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                   
                                    <h4 class="title">Créer un article</h4>
                                </div>
                                <div class="content">
                                    <form method="post"  enctype="multipart/form-data"  action="/post-article">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                        <h4>Ajouter une image</h4>
                                                        <div class="form-group">
                                                                <input class="form-control input-sm" type="file" name="img" placeholder="Image Upload">
                                                            </div>
                                                    <label>Intitulé de l'article </label>
                                                    <input type="text" name="title" class="form-control" placeholder="Intitulé..">
                                                </div>
                                            </div>
                                        </div>

                                        

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                        
                                                    <label>Preview  </label>
                                                    <input name="preview" class="form-control" placeholder="Déroulez la liste ou créez un nouveau type" type="text">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="comment">Texte:</label>
                                                    <textarea name="content" class="form-control" rows="7"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-fill pull-left" formaction="/post-draft"> Sauvegarder en tant que brouillon </button>
                                        <button type="submit" class="btn btn-success btn-fill pull-right" formaction="/post-article">Créer l'article</button>
                                        <button type="submit" class="btn btn-danger btn-fill pull-right">Annuler</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script
