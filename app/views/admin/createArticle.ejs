<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Blog Bang - Crée un article</title>
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="stylesheet" type="text/css" href="/css/admin.css" />

    <!--     Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>

</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="black" data-image="assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/" class="simple-text">
                        <span style="font-weight: bold">Blog</span>Bang
                    </a>
                </div>

                <ul class="nav">
                    <p style="font-size: 15px">Accueil </p>
                    <li>
                        <a href="/admin/dashboard">
                            <i class="fa fa-tachometer" aria-hidden="true"></i>
                            <p>Tableau de bord</p>
                        </a>
                    </li>
                    <hr style="width: 150px; border-color: #cccccc">
                    <p style="font-size: 15px"> Blog </p>
                    <li class="active">
                        <a href="/admin/creer-article">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i>
                            <p>Crée un article </p>
                        </a>
                    </li>

                    <li>
                        <a href="/admin/liste-articles">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            <p>Liste des articles</p>
                        </a>
                    </li>
                    <hr style="width: 150px; border-color: #cccccc">
                    <p style="font-size: 15px"> Administrateur </p>
                    <li>
                        <a href="/admin/myProfile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <p>Mon compte</p>
                        </a>
                    </li>
                    <li>
                            <a href="/logout">
                            <i class="fa fa-power-off" aria-hidden="true"></i>

                            <p>Déconnexion</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Crée un article</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">

                                <div class="content">
                                    <form method="post" enctype="multipart/form-data" action="/post-article">

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">

                                                   <label > Auteur  </label>
                                                    <input name="author" class="form-control" placeholder="Nom de l'autheur " type="text">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                               
                                                <label > Titre </label>
                                                <input type="text" name="title" class="form-control" maxlength="40" placeholder="Intitulé..">
                                            </div>

                                            
                                        </div>

                                        

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                   
                                                    <label > Image </label>
                                                    <input style="width: 100%" class="btn btn-primary" type="file" maxlength="440" name="img" placeholder="Image Upload">
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">

                                                    
                                                   <label > Résumé </label>
                                                    <input name="preview" class="form-control" placeholder="" type="text">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    
                                                   <label > Contenu </label>
                                                     <!-- <input type="text" name="content" class="form-control" rows="7"></input>  -->
                                                    <textarea class="form-control" rows="10"></textarea>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        

                                        <button type="submit" class="btn btn-primary btn-fill pull-left" formaction="/post-draft"> Sauvegarder en tant que brouillon </button>
                                        <button type="submit" class="btn btn-success btn-fill pull-right" formaction="/post-article">Créer l'article</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/jquery.3.2.1.min.js"></script>
    <script src="/dist/js/bootstrap.min.js"></script>
    <script src="/js/lightboot.js"></script>

    <!-- < <script src="/js/leavingPage.js"></script>> -->

</body>

</html>